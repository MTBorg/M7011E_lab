<input
	type="email"
	class="form-control"
	placeholder="email"
	pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.([a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?){2,})$"
	oninvalid="this.setCustomValidity('Please enter an email of form myemail@mydomain.ab')"
 	oninput="this.setCustomValidity('')"
	required
/>
